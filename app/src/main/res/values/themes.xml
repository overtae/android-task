<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Playground" parent="Theme.Material3.DayNight.NoActionBar">
        <!--        <item name="android:fontFamily">@font/gmarket_sans_medium</item>-->
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Playground" parent="Base.Theme.Playground" />

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/gmarket_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/text_aside</item>
    </style>

    <style name="MenuTextStyle" parent="ShapeAppearanceOverlay.Material3.NavigationView.Item">
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="MediumTextStyle">
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BoldTextStyle">
        <item name="android:fontFamily">@font/gmarket_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>

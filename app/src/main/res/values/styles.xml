<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBase" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BorderButton" parent="ButtonBase">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/box_round</item>
    </style>

    <style name="SolidButton" parent="ButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/box_gradient</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="InputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/box_border</item>
        <item name="android:maxLength">20</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text</item>
    </style>

    <style name="LineRow">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:src">@color/gray</item>
        <item name="android:background">@drawable/box_round</item>
    </style>

    <style name="LineCol">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_columnSpan">5</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:src">@color/gray</item>
        <item name="android:background">@drawable/box_round</item>
    </style>
</resources>
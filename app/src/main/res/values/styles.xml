<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBase" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BorderButton" parent="ButtonBase">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/round_border_box</item>
    </style>

    <style name="SolidButton" parent="ButtonBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_filled_box</item>
    </style>

    <style name="DescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="InputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/round_border_box</item>
        <item name="android:maxLength">20</item>
        <item name="android:textColor">@color/description</item>
        <item name="android:textColorHint">@color/description</item>
    </style>
</resources>
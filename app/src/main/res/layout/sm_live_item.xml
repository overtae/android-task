<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/iv_sm_live_screen"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:background="@drawable/container_round_box"
        android:clipToOutline="true"
        android:contentDescription="@string/img_live"
        android:scaleType="centerCrop"
        android:src="@drawable/img_live_1"
        android:tintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#5C000000" />

    <TextView
        android:id="@+id/tv_sm_live_badge"
        style="@style/BoldTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/container_chip"
        android:backgroundTint="@color/live_badge_bg_live"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/live"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sm_live_viewer"
        style="@style/BoldTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/container_chip"
        android:backgroundTint="@color/live_badge_bg_viewer"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sm_live_badge"
        app:layout_constraintStart_toEndOf="@id/tv_sm_live_badge"
        app:layout_constraintTop_toTopOf="@id/tv_sm_live_badge"
        tools:text="1,786" />

    <TextView
        android:id="@+id/tv_sm_live_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/live_title"
        android:textFontWeight="500"
        app:layout_constraintEnd_toStartOf="@id/btn_more"
        app:layout_constraintStart_toEndOf="@id/iv_sm_live_screen"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="라이브 방송 제목" />

    <ImageView
        android:id="@+id/iv_sm_live_profile"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/container_circle"
        android:clipToOutline="true"
        android:contentDescription="@string/img_live"
        android:scaleType="centerCrop"
        android:src="@drawable/img_anonymous"
        app:layout_constraintStart_toStartOf="@id/tv_sm_live_title"
        app:layout_constraintTop_toBottomOf="@id/tv_sm_live_title" />

    <TextView
        android:id="@+id/tv_sm_live_streamer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:includeFontPadding="false"
        android:textColor="@color/text_aside"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_sm_live_profile"
        app:layout_constraintStart_toEndOf="@id/iv_sm_live_profile"
        app:layout_constraintTop_toTopOf="@id/iv_sm_live_profile"
        tools:text="스트리머 이름" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/img_verified"
        android:scaleType="centerInside"
        android:src="@drawable/img_verified_mark"
        app:layout_constraintBottom_toBottomOf="@id/tv_sm_live_streamer"
        app:layout_constraintStart_toEndOf="@id/tv_sm_live_streamer"
        app:layout_constraintTop_toTopOf="@id/tv_sm_live_streamer" />

    <TextView
        android:id="@+id/tv_sm_live_tag_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/container_chip"
        android:backgroundTint="@color/live_tag_bg"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textColor="@color/live_tag_text"
        android:textFontWeight="500"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/iv_sm_live_profile"
        app:layout_constraintTop_toBottomOf="@id/iv_sm_live_profile"
        tools:text="태그 1" />

    <TextView
        android:id="@+id/tv_sm_live_tag_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/container_chip_border"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textColor="@color/live_tag_text"
        android:textFontWeight="500"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sm_live_tag_1"
        app:layout_constraintStart_toEndOf="@id/tv_sm_live_tag_1"
        app:layout_constraintTop_toTopOf="@id/tv_sm_live_tag_1"
        tools:text="태그 2" />

    <TextView
        android:id="@+id/tv_sm_live_tag_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/container_chip_border"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textColor="@color/live_tag_text"
        android:textFontWeight="500"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sm_live_tag_2"
        app:layout_constraintStart_toEndOf="@id/tv_sm_live_tag_2"
        app:layout_constraintTop_toTopOf="@id/tv_sm_live_tag_2"
        tools:text="태그 3" />

    <ImageButton
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/ic_more"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/ico_inactive" />

</androidx.constraintlayout.widget.ConstraintLayout>



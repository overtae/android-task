<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_ct_screen"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/container_round_box"
        android:clipToOutline="true"
        android:contentDescription="@string/img_desc_category"
        android:scaleType="centerCrop"
        android:tintMode="src_atop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#5C000000"
        tools:src="@drawable/img_category_talk" />

    <TextView
        android:id="@+id/tv_ct_viewer"
        style="@style/BoldTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/container_chip"
        android:backgroundTint="@color/live_badge_bg_live"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:textSize="11sp"
        app:drawableStartCompat="@drawable/ic_dot"
        app:drawableTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2만" />

    <TextView
        android:id="@+id/tv_ct_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:bufferType="spannable"
        android:includeFontPadding="false"
        android:textColor="@color/text_main"
        android:textFontWeight="500"
        app:layout_constraintEnd_toEndOf="@id/iv_ct_screen"
        app:layout_constraintStart_toStartOf="@id/iv_ct_screen"
        app:layout_constraintTop_toBottomOf="@id/iv_ct_screen"
        tools:text="talk" />

    <TextView
        android:id="@+id/tv_ct_live_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:text="@string/live_count"
        android:textColor="@color/text_aside"
        android:textFontWeight="500"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/tv_ct_name"
        app:layout_constraintTop_toBottomOf="@id/tv_ct_name"
        tools:text="라이브 12개" />

</androidx.constraintlayout.widget.ConstraintLayout>



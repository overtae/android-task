<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_ct_screen"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/container_round_box"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_live_01"
            android:tintMode="src_atop"
            app:tint="#5C000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_ct_viewer"
            style="@style/BoldTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/container_chip"
            android:backgroundTint="@color/live_badge_bg_live"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:text="● 2만"
            android:layout_margin="10dp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ct_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="체인드 투게더가나다라마바사"
            android:textColor="@color/text_main"
            android:textFontWeight="500"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="10dp"
            android:bufferType="spannable"
            app:layout_constraintEnd_toEndOf="@id/iv_ct_screen"
            app:layout_constraintTop_toBottomOf="@id/iv_ct_screen"
            app:layout_constraintStart_toStartOf="@id/iv_ct_screen" />

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_new"-->
        <!--            android:layout_width="14dp"-->
        <!--            android:layout_height="14dp"-->
        <!--            android:src="@drawable/ic_new"-->
        <!--            android:layout_marginStart="5dp"-->
        <!--            android:scaleType="centerInside"-->
        <!--            android:layout_marginEnd="10dp"-->
        <!--            app:layout_constraintEnd_toEndOf="@id/iv_ct_screen"-->
        <!--            app:layout_constraintStart_toEndOf="@id/tv_ct_name"-->
        <!--            app:layout_constraintTop_toTopOf="@id/tv_ct_name" />-->

        <TextView
            android:id="@+id/tv_ct_live_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_aside"
            android:text="라이브 12개"
            android:textFontWeight="500"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@id/tv_ct_name"
            app:layout_constraintTop_toBottomOf="@id/tv_ct_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>


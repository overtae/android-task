<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/image1" />

            <GridLayout
                android:orientation="horizontal"
                android:columnCount="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_white"
                android:layout_marginTop="-40dp"
                android:paddingTop="40dp"
                android:paddingBottom="100dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/TitleText"
                    android:layout_columnSpan="5"
                    android:textSize="30sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/text_info" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_columnSpan="5"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:src="@drawable/box_gradient" />

                <TextView
                    android:id="@+id/tv_id"
                    style="@style/DescText"
                    android:layout_gravity="center"
                    android:layout_columnSpan="5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/id_info" />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/TitleText"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:text="@string/number_info" />

                <ImageView style="@style/LineRow" />

                <TextView
                    android:id="@+id/tv_mbti"
                    style="@style/TitleText"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:text="@string/text_info" />

                <ImageView style="@style/LineRow" />

                <TextView
                    android:id="@+id/tv_gender"
                    style="@style/TitleText"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:text="@string/text_info" />

                <TextView
                    style="@style/DescText"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:textColor="@color/description"
                    android:text="나이" />

                <TextView
                    style="@style/DescText"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:textColor="@color/description"
                    android:text="MBTI" />

                <TextView
                    style="@style/DescText"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:textColor="@color/description"
                    android:text="성별" />

                <ImageView style="@style/LineCol" />

                <TextView
                    style="@style/DescText"
                    android:layout_gravity="center"
                    android:layout_columnSpan="5"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/description"
                    android:text="로그인 성공 기념 피카츄 보고 가세요." />

                <ImageView
                    android:id="@+id/iv_pikachu"
                    android:src="@drawable/sign_up"
                    android:layout_height="400dp"
                    android:layout_marginTop="20dp"
                    android:layout_columnSpan="5"
                    android:scaleType="centerInside" />

                <TextView
                    style="@style/DescText"
                    android:layout_gravity="center"
                    android:layout_columnSpan="5"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/description"
                    android:text="봐주셔서 감사합니다." />

                <TextView
                    android:id="@+id/tv_likes"
                    style="@style/DescText"
                    android:layout_gravity="center"
                    android:layout_columnSpan="5"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/description"
                    android:text="@string/number_info" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_like"
                    android:layout_columnSpan="5"
                    android:clickable="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iv_emoji"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_icon_selector"
                        android:layout_marginEnd="10dp"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="@id/tv_text"
                        app:layout_constraintBottom_toBottomOf="@id/tv_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_text"
                        app:layout_constraintHorizontal_chainStyle="packed" />

                    <TextView
                        android:id="@+id/tv_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="좋아요"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_emoji" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circle_gradient"
        android:src="@drawable/ic_cancel"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>